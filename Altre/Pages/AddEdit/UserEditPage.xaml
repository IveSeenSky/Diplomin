<Page x:Class="Altre.Pages.AddEdit.UserEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Altre.Pages.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserEditPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" 
                   Grid.Row="1"
                   Style="{StaticResource TextBlockStyle}"/>

        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Margin="5"
                 Width="400"
                 x:Name="LoginBx"
                 HorizontalAlignment="Left"
                 Text="{Binding Users.username}"/>

        <TextBlock Text="Пароль"
                   Grid.Row="2"
                   Style="{StaticResource TextBlockStyle}"/>

        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Margin="5"
                 x:Name="PassBx"
                 Width="400"
                 HorizontalAlignment="Left"
                 Text="{Binding Users.password}"/>

        <TextBlock Grid.Row="3"
                   Text="Работник"
                   Style="{StaticResource TextBlockStyle}"/>

        <ComboBox Grid.Column="1"
                  x:Name="EmplsCmbx"
                  Grid.Row="3"
                  Margin="3"
                  Width="400"
                  HorizontalAlignment="Left"
                  SelectedItem="{Binding Employee}"
                  DisplayMemberPath="full_name"/>

        <Button x:Name="SaveBtn"
                Grid.Row="5"
                Content="Сохранить"
                Width="180"
                Height="30"
                Style="{StaticResource ButtonStyleDefault}" 
                Click="SaveBtn_Click"/>
    </Grid>
</Page>
